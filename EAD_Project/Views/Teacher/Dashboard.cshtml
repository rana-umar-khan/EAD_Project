
@{
    ViewBag.Title = "Dashboard";
}


<div class="jumbotron">
    <div class="row">
        <div class="col-sm-9">
            <h1 class="h1"> @Session["Name"]</h1>
            <p>This is your Dashboard</p>
        </div>
        <div class="col-sm-3">
            @{
                if (Session["login"] != null)
                {

                    <input class="btn btn-warning" type="button" style="background-color:red" id="logout1" value="Logout">
                }
            }
        </div>
    </div>
    
   
    
</div>
<h3 class="h3">Courses</h3>
<div class="table-bordered" style="border:double;border-color:black;padding:20px;margin-bottom:10px">
    @{
        var obj = (List<Models.CourseDTO>)ViewBag.courses;
        for (int i = 0; i < obj.Count; i++)
        {
            
            <div class="well well-sm" style="padding:20px">
                <p>@obj[i].CouName</p>
                <input  class="btn btn-default" value="Mark Attendance" id="mark+@i" />
                <input class="btn btn-default" contenteditable="false" id="view+@i" value="View Attendance"/>
            </div>
        }
    }
</div>
<input type="button" class="btn btn-default" contenteditable="false" value="Update Profile" />
<input class="btn btn-warning" contenteditable="false" value="Logout"  />

@section scripts{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        $(function () {
            $("#logout1").click(function () {
                var setting = ({
                    url: "/Home/logout",
                    type: "Post"
                });
                $.ajax(setting);
                return false;

            });
        });
</script>

}
